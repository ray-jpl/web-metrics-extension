{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "Web Metrics",
  "description": "Track and manage the time you spend browsing the web!",
  "action": {
      "default_popup": "index.html",
      "default_title": "React Chrome Extension",
      "default_icon": {
        "16": "logo_icon@16w.png",
        "32": "logo_icon@32w.png",
        "48": "logo_icon@48w.png",
        "96": "logo_icon@96w.png",
        "128": "logo_icon@128w.png"
      }
  },
  "icons": {
    "16": "logo_icon@16w.png",
    "32": "logo_icon@32w.png",
    "48": "logo_icon@48w.png",
    "96": "logo_icon@96w.png",
    "128": "logo_icon@128w.png"
  },
  "permissions": [
    "alarms",
    "storage",
    "tabs",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  "background": {
    "service_worker": "background.js"
  }
}