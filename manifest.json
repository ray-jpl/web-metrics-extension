{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "Time Tracker",
  "description": "Track time spent on each website",
  "action": {
      "default_popup": "index.html",
      "default_title": "React Chrome Extension",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
  },
  "permissions": [
    "alarms",
    "storage",
    "tabs",
    "nativeMessaging",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  "background": {
    "service_worker": "background.js"
  }
}