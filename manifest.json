{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "Time Tracker",
  "description": "Track time spent on each website",
  "action": {
      "default_popup": "js/index.html",
      "default_title": "React Chrome Extension",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "js/background.js"
  }
}